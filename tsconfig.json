{
  "compilerOptions": {
    /* 🌐 Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* 🧠 Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* 🧩 Project Structure */
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "types": ["types/index.ts"],
      "types/*": ["types/*"]
    },

    /* ✂️ Emission Control (optional) */
    "noEmit": true
  },

  /* 📦 Include All Source Files */
  "include": ["src", "cli.ts"],

  /* 🛑 Ignore node_modules, build, etc. */
  "exclude": ["node_modules", "dist"]
}
