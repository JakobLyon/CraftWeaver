{
  "compilerOptions": {
    /* ğŸŒ Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ğŸ§  Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* ğŸ§© Project Structure */
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "types": ["types/index.ts"],
      "types/*": ["types/*"]
    },
  },

  /* ğŸ“¦ Include All Source Files */
  "include": ["src", "cli.ts"],

  /* ğŸ›‘ Ignore node_modules, build, etc. */
  "exclude": ["node_modules", "dist"]
}
